$col-pink = #C9518A
$col-green = #39B7C4
$col-blue = #586086
$col-bg = #2F3238
$col-fg = #b5c0c7

$logo-height = 264
$media-breakpoint-height = 640

@import "header"
@import "footer"

html
  min-height: 100%
  ::selection
    background: $col-green

  body
    margin: 0
    background-color: $col-bg
    color: $col-fg
    font-family: "pt_sansregular"

    a, a:visited
      color: inherit
      cursor: pointer
      text-decoration: none
      transition: color 0.2s, transform 0.2s

      &:hover, &.active
        color: $col-pink
        transform: scale(1.1)