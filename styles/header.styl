$poly-gather-time = 1
$poly-gather-dist = 96

header
  text-align: center

  @media (max-height: ($media-breakpoint-height)px)
    .hero
      .logo
        margin-bottom: -($logo-height / 2)px

      .title
        opacity: 0

  .hero
    .logo
      animation: slide-up 1s, fade-in 1.4s
      bottom: 50%
      position: absolute
      transition: all 1s
      width: 100%

      path
        transition: all 2s
        cursor: pointer

        &:hover, &.active
          fill: white

      path:nth-child(4)
        animation: gather-down ($poly-gather-time)s
      path:nth-child(1)
        animation: gather-right ($poly-gather-time)s
      path:nth-child(2)
        animation: gather-right ($poly-gather-time)s
      path:nth-child(5)
        animation: gather-left ($poly-gather-time - 0.2)s
      path:nth-child(3)
        animation: gather-left ($poly-gather-time - 0.4)s
      path:nth-child(6)
        animation: gather-left ($poly-gather-time)s

    .title
      position: absolute
      top: 50%
      transition: all 2s
      width: 100%

      h1
        animation: title-slide-down 1s, fade-in 1.4s
        color: $col-green
        font-size: 64px
        letter-spacing: 0.1em

        a
          transition all 1.6s
          text-decoration: none

          &:hover, &.active
            color: $col-pink

      .links
        animation: links-slide-down 1.1s, fade-in 1.4s
        font-size: 42px
        margin: -24px 0 0

      nav ul
        list-style: none
        padding: 0

        li
          display: inline-block
          margin: 0 16px

          a          
            cursor: pointer
            padding: 8px

            &:hover, &.active
              color: $col-green

@keyframes fade-in
  0%
    opacity: 0

@keyframes gather-down
  0%
    transform: translate(0, -($poly-gather-dist)px)

@keyframes gather-left
  0%
    transform: translate(($poly-gather-dist)px, 0)

@keyframes gather-right
  0%
    transform: translate(-($poly-gather-dist)px, 0)

@keyframes title-slide-down
  0%
    transform: translate(0, -128px)

@keyframes links-slide-down
  0%
    transform: translate(0, -196px)
              
@keyframes slide-up
  0%
    transform: translate(0, 256px)
