
header
  //opacity: 0.2
  text-align: center
  position: relative
  height: 100%
  width: 100%

  .hero
    .logo
      left: 50%
      top: 50%
      margin-top: -($logo-height - 100)px
      margin-left: -($logo-width / 2)px
      position: absolute
      animation: fade-down 1s
      transition: all 1s

      .logo-poly
        transition: all 2s
        cursor: pointer

        &:hover, &.active
          fill: white

        &.d
          animation: slide-down 0.8s

        &.a
          animation: slide-right 0.4s
        &.b
          animation: slide-right 0.4s

        &.e
          animation: slide-left 0.8s
        &.c
          animation: slide-left 0.4s
        &.f
          animation: slide-left 1s

    .title
      position: absolute
      width: 100%
      top: 50%
      animation: fade-up 1s

      h1
        color: $col-green
        font-family: "PT Sans"
        letter-spacing: 0.1em
        font-size: 64px

        a
          transition all 1.6s
          text-decoration: none

          &:hover, &.active
            color: $col-pink

      .description
        margin: -24px 16px 0
        font-size: 28px
        font-family: "Lora"
        font-style: italic
          
      nav ul
        list-style: none
        padding: 0
        
        li
          display: inline-block
          margin: 0 16px
          
          a          
            padding: 8px
            cursor: pointer
  
            &:hover, &.active
              color: $col-green

@keyframes slide-down
  0%
    transform: translate(0, -96px)
  100%
    transform: translate(0, 0)

@keyframes slide-left
  0%
    transform: translate(96px, 0)
  100%
    transform: translate(0, 0)

@keyframes slide-right
  0%
    transform: translate(-128px, 0)
  100%
    transform: translate(0, 0)

@keyframes fade-down
  0%
    opacity: 0
    transform: translate(0, -96px)
  100%
    opacity: 1
    transform: translate(0, 0)
              
@keyframes fade-up
  0%
    opacity: 0
    transform: translate(0, 96px)
  100%
    opacity: 1
    transform: translate(0, 0)

@media (max-width: 358px)
  header
    .hero
      .logo
        margin-top: -($logo-height - 160)px

      .title
        h1
          font-size: 48px

        .description
          font-size: 24px

@media (max-height: 560px)
  header
    .hero
      .logo
        margin-top: -($logo-height - 248)px
        top: 40%
      .title
        top: 40%

        .description
          margin: -44px 16px 0
          font-size: 24px