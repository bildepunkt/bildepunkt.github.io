
extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        h2
          a(href=article.url)= article.title

        p.metadata.date
          span= moment.utc(article.date).format('DD MMMM, YYYY')

        - var tags = env.helpers.getTagsFromArticle(article)
          if tags.length
            p.metadata.tags
              each tag in tags
                span.tag
                  a(href=env.helpers.getTagHome(tag).url)= tag

      section.content
        if article.intro.length
          != typogr(article.intro).typogrify()
        if article.hasMore
          p.more
            a(href=article.url) read more

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) &laquo; Newer
    //- else
      a(href='/archive.html') &laquo; Archives
    if nextPage
      a(href=nextPage.url) Next page &raquo;
