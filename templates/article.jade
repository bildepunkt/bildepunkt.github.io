
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  include header

block content
  include author
  h1.page-title= page.title

  p.metadata.date
    span= moment.utc(page.date).format('DD MMMM, YYYY')

  p.metadata.tags
    - var tags = env.helpers.getTagsFromArticle(page)
    each tag in tags
      span.tag
        a(href=env.helpers.getTagHome(tag).url)= tag

  article.article
    section.content!= typogr(page.html).typogrify()

  mixin author(page.metadata.author)

  div#disqus_thread
  script.
