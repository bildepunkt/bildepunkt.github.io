
#content
    position: relative

@media (min-width: $tablet-width)
    #content
        .content-wrap
            margin: 0 auto
            width: 768px

@media (min-width: $mobile-width) and (max-width: $tablet-width - 1)
    #content
        .content-wrap
            margin: 0 64px

@media (max-width: $mobile-width - 1)
    #content
        .content-wrap
            margin: 0 32px
