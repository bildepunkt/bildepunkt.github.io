
@import "variables"

@import "galaxy"
@import "header"
@import "content"
@import "article"
@import "footer"

html
    background-color: $col-bg
    height: 100%
    min-height: 100%

body
    font-family: $sans
    line-height: 1.52
    text-rendering: optimizeLegibility
    background-color: $col-bg
    height: 100%
    color: $col-fg
    opacity: 0
    transition: opacity 0.5s ease
    -webkit-transition: opacity 0.5s ease
    -moz-transition: opacity 0.5s ease
    -ms-transition: opacity 0.5s ease
    -o-transition: opacity 0.5s ease

    &.all-systems-go
        opacity: 1


a, a:visited
    color: $col-fg
    text-decoration: underline

a:hover
    color: $col-accent
    text-decoration: underline